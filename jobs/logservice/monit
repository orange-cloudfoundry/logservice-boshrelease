check process logservice
  with pidfile   /var/vcap/sys/run/bpm/logservice/logservice.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start logservice"
  stop program  "/var/vcap/jobs/bpm/bin/bpm stop  logservice"
  group vcap
  if failed
    port 8089
    type tcp
    timeout 30 seconds
  for 2 cycles
  then restart
